{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "ticket-route": {
        "ClusterId": "ticket-cluster",
        "Match": {
          "Path": "/api/tickets/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/tickets/{**catch-all}"
          }
        ]
      },
      "accesscontrol-route": {
        "ClusterId": "accesscontrol-cluster",
        "Match": {
          "Path": "/api/access/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/access/{**catch-all}"
          }
        ]
      },
      "schedule-route": {
        "ClusterId": "schedule-cluster",
        "Match": {
          "Path": "/api/schedule/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/schedule/{**catch-all}"
          }
        ]
      },
      "crowdmonitor-route": {
        "ClusterId": "crowdmonitor-cluster",
        "Match": {
          "Path": "/api/crowd/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/crowd/{**catch-all}"
          }
        ]
      },
      "notification-route": {
        "ClusterId": "notification-cluster",
        "Match": {
          "Path": "/api/notifications/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/notifications/{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "ticket-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://festivo.ticketservice:8080"
          }
        }
      },
      "accesscontrol-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://festivo.accesscontrolservice:8080"
          }
        }
      },
      "schedule-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://festivo.scheduleservice:8080"
          }
        }
      },
      "crowdmonitor-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://festivo.crowdmonitorservice:8080"
          }
        }
      },
      "notification-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://festivo.notificationservice:8080"
          }
        }
      }
    }
  }
}
